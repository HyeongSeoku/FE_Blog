{
  "name": "seok_blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "optimize-images": "node ./script/optimize-images.js",
    "postbuild": "next-sitemap",
    "build:analyze": "cross-env NODE_ENV=development ANALYZE=true pnpm run build",
    "build": "pnpm run optimize-images && next build",
    "dev": "next dev",
    "serve:static": "python3 -m http.server 3000 --directory out",
    "start": "next start",
    "lint": "next lint",
    "prepare": "node -e \"const fs = require('fs'); const hasHusky = fs.existsSync('./node_modules/.bin/husky'); if (process.env.NODE_ENV !== 'production' && hasHusky) require('child_process').execSync('husky install', { stdio: 'inherit' })\"",
    "format": "pnpm exec prettier --config .prettierrc --write .",
    "format:check": "pnpm exec prettier --config .prettierrc --check .",
    "spell-check": "cspell \"src/**/*.{ts,tsx,js,jsx}\"",
    "type-check": "npx tsc --noEmit",
    "lhci": "lhci autorun",
    "sonar": "pnpm exec dotenv -e .env.development -- pnpm exec sonar-scanner"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.5",
    "@svgr/webpack": "^8.1.0",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.12",
    "gray-matter": "^4.0.3",
    "html-react-parser": "^5.2.6",
    "next": "14.2.5",
    "next-mdx-remote": "^5.0.0",
    "next-sitemap": "^4.2.3",
    "postcss": "^8.5.3",
    "postcss-nesting": "^13.0.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.0",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-mdx": "^3.1.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "sharp": "^0.33.5",
    "swiper": "^11.2.8",
    "tailwindcss": "3.4.1",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "^14.2.5",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.0",
    "@types/unist": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cross-env": "^10.0.0",
    "cspell": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.0",
    "plato": "^1.7.0",
    "prettier": "^3.5.3",
    "sonar-scanner": "^3.1.0",
    "ts-prune": "^0.10.3",
    "typescript": "^5.8.2"
  }
}
