{
  "name": "seok_blog",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "optimize-images": "node ./script/optimize-images.js",
    "build": "pnpm run optimize-images && next build",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "prepare": "node -e \"const fs = require('fs'); const hasHusky = fs.existsSync('./node_modules/.bin/husky'); if (process.env.NODE_ENV !== 'production' && hasHusky) require('child_process').execSync('husky install', { stdio: 'inherit' })\"",    
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "spell-check": "cspell \"src/**/*.{ts,tsx,js,jsx,md,mdx}\"",
    "type-check": "npx tsc --noEmit",
    "lhci": "lhci autorun",
    "sonar": "pnpm exec dotenv -e .env.development -- pnpm exec sonar-scanner"
  },
  "dependencies": {
    "@mdx-js/loader": "^3.0.1",
    "@mdx-js/mdx": "^3.0.1",
    "@mdx-js/react": "^3.0.1",
    "@next/mdx": "^14.2.5",
    "@svgr/webpack": "^8.1.0",
    "autoprefixer": "^10.4.20",
    "classnames": "^2.5.1",
    "dayjs": "^1.11.12",
    "gray-matter": "^4.0.3",
    "next": "14.2.5",
    "next-mdx-remote": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rehype-external-links": "^3.0.0",
    "rehype-pretty-code": "^0.14.0",
    "remark": "^15.0.1",
    "sharp": "^0.33.5",
    "unist-util-visit": "^5.0.0",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@lhci/cli": "^0.14.0",
    "@next/bundle-analyzer": "^14.2.5",
    "@types/node": "^20.14.15",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "cspell": "^8.18.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^8.0.0",
    "plato": "^1.7.0",
    "postcss": "^8.4.41",
    "prettier": "^3.5.3",
    "rehype-external-links": "^3.0.0",
    "sonar-scanner": "^3.1.0",
    "tailwindcss": "^3.4.9",
    "ts-prune": "^0.10.3",
    "typescript": "^5.5.4"
  }
}
