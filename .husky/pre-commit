#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

set -e

FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' || true)

if [ -z "$FILES" ]; then
  echo "âœ… No JavaScript/TypeScript files to lint or format."
  exit 0
fi

# node_modules/.bin ê²½ë¡œ ìš°ì„  ë“±ë¡
export PATH="./node_modules/.bin:$PATH"

echo "ğŸ” Running ESLint..."
echo "$FILES" | xargs eslint --fix

echo "ğŸ¨ Running Prettier..."
echo "$FILES" | xargs prettier --write

echo "â• Restaging formatted files..."
echo "$FILES" | xargs git add

echo "âœ… Pre-commit checks completed."