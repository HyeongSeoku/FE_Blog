#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

set -e

# Intel Mac, Apple Silicon, NVM ì‚¬ìš©ìë¥¼ ìœ„í•œ fallback ê²½ë¡œ ì¶”ê°€
export PATH="./node_modules/.bin:$PATH:/usr/local/bin:/opt/homebrew/bin"

# NVM ì‚¬ìš©ìì˜ ê²½ìš°: ê°€ì¥ ìµœì‹  Node ë²„ì „ ìë™ ì¶”ê°€ 
if [ -d "$HOME/.nvm/versions/node" ]; then
  LATEST_NODE=$(ls "$HOME/.nvm/versions/node" | sort -V | tail -n 1)
  export PATH="$HOME/.nvm/versions/node/$LATEST_NODE/bin:$PATH"
fi

# ğŸ” ë³€ê²½ëœ íŒŒì¼ ì¤‘ JS/TSë§Œ ì„ íƒ
FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(js|jsx|ts|tsx)$' || true)

if [ -z "$FILES" ]; then
  echo "âœ… No JavaScript/TypeScript files to lint or format."
  exit 0
fi

echo "ğŸ” Running ESLint..."
echo "$FILES" | xargs eslint --fix

echo "ğŸ¨ Running Prettier..."
echo "$FILES" | xargs prettier --write

echo "â• Restaging formatted files..."
echo "$FILES" | xargs git add

echo "âœ… Pre-commit checks completed."